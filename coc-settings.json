{
  "snippets.ultisnips.pythonPrompt": false,
  "languageserver": {
    "python": {
      "command": "pylsp",
      "filetypes": [
        "python"
      ],
      "settings": {
        "pylsp": {
          "plugins": {
            "flake8": {
              "enabled": true
            },
            "pylint": {
              "enabled": true
            }
          }
        }
      }
    }
  }
}
